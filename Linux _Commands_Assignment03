8.tail - Print all lines in a file from fifth line onwards
cat pat.txt 
dc
dac
daac
ddaacc
dmc
drc
daaaaac
dmcdmcdmc
dac
cad
d*c
d%d

tail -n +5 pat.txt 
dmc
drc
daaaaac
dmcdmcdmc
dac
cad
d*c
d%d

